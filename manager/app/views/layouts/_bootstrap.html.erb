<% @bootstrap and @bootstrap.each do |boot| %>

  <script type="text/javascript">
    Bixby.app.bootstrap({
      <%
      json = boot[:data].html_safe
      if boot[:model] =~ /List$/ or boot[:data].kind_of? Array then
      %>
        <%= boot[:name] %>: (new Bixby.model.<%= boot[:model] %>()).reset(<%= json %>)
      <%
      else
      %>
        <%= boot[:name] %>: new Bixby.model.<%= boot[:model] %>(<%= json %>)
      <%
      end
      %>
     });
  </script>

<% end %>
