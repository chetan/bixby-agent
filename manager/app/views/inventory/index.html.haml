%div.content-inner
  %h2 Inventory
  = lorem_ipsum


  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Name
        %th Hostname
        %th IP
        %th Actions

    %tbody
      - @hosts.each do |host|
        %tr.actionable
          %td.button.dropdown{ "data-dropdown" => "dropdown" }
            = link_to host.ip, inventory_path(host.id)


            / %div.btn-group
            /   %a.btn.action_btn.dropdown-toggle{ :href => "#", "data-toggle" => "dropdown" }
            /     = image_tag "wrench_orange.png"
            /   %ul.dropdown-menu
            /     %li
            /       = link_to "Monitoring", monitoring_host_path(host.id)
            /     %li
            /       %a{ :href => "#" } Delete Host





          %td
          %td= host.ip
          %td
            = link_to "Monitoring", monitoring_host_path(host.id)
