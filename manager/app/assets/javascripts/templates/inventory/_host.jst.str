
  <div class="body">
    <h3>
      <a class="host"><%= host.name() %></a>
      <span class="edit"><button class="btn btn-mini edit">edit</button></span>
    </h3>
    <%? host.get("desc") %>
      <blockquote class="desc"><%= markdown(host.g("desc")) %></blockquote>
    <%//%>
  </div>

  <div class="editor">
    <label>Alias
      <input type="text" class="span3 alias" placeholder="alias" value="<%= host.g('alias') %>">
    </label>

    <label>Description
      <textarea class="span3 desc" placeholder="description"><%= host.g('desc') %></textarea>
    </label>
    <p class="markdown">accepts <a href="http://daringfireball.net/projects/markdown/syntax" target="_new" title="open markdown reference in new window">markdown</a></p>

    <button class="btn btn-mini save">Save</button>
    <button class="btn btn-mini btn-danger cancel">Cancel</button>
  </div>

  <div class="actions"><a class="monitoring">Monitoring</a></div>
